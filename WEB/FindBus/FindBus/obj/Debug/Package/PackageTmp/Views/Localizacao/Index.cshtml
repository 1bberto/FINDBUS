@model FindBus.Models.Localizacao
@{
    ViewBag.Title = "Atualização";
    ViewBag.Pagina = "Atualização";
    Layout = "~/Views/Shared/_BootstrapLayout.basic.cshtml";
}
@Html.ValidationSummary(true)
<div class="row">
    <div class="col-md-5 col-md-offset-0">
        <div id="map" style="width: 750px; height: 500px">
        </div>
    </div>
    <div class="col-md-4 col-md-offset-3">
        <div id="Localizacoes" style="overflow: auto; height: 500px">
            <input type="radio"
                name="radSize"
                id="sizeSmall"
                value="small"
                checked="checked" onclick="DefineTipoImagemPonto()" />
            <label for="sizeSmall">Ponto de Onibus</label>
            <input type="radio"
                name="radSize"
                id="sizeMed"
                value="medium" onclick="DefineTipoImagemPassagem()" />
            <label for="sizeMed">Ponto Passagem</label>
            <b>Localizações</b>
            <div id="ListPosicoes"></div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-5 col-md-offset-0">
        <div class="control-group">
            <div class="controls">
                <label for="@Html.LabelFor(model => model.Latitude)" class="col-lg-2 control-label">@Html.LabelFor(model => model.Latitude)</label>
                <input type="text" class="form-control" id="Latitude" placeholder="Digite a Latitude">
            </div>
        </div>
        <div class="control-group">
            <label for="@Html.LabelFor(model => model.Longitude)" class="col-lg-2 control-label">@Html.LabelFor(model => model.Longitude)</label>
            <input type="text" class="form-control" id="Longitude" placeholder="Digite a Longitude">
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-5 col-md-offset-0">
        <div class="control-group">
            <div class="controls">
                <label class="col-lg-2 control-label">Estado</label>
                <input type="text" class="form-control" id="Estado">
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <label class="col-lg-2 control-label">Cidade</label>
                <input type="text" class="form-control" id="Cidade">
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <label class="col-lg-2 control-label">Bairro</label>
                <input type="text" class="form-control" id="Bairro">
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <label class="col-lg-2 control-label">Rua</label>
                <input type="text" class="form-control" id="Rua">
            </div>
        </div>
    </div>
</div>
<br />
<input type="submit" class="btn btn-large btn-success" value="Verificar" onclick="VeriricaLocalizacao('@Url.Action("VerificaLocalizacao", "Localizacao")');"/>

@section Scripts {
    <script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyCuzGQQHQEajGCANlCPhwU8YdG9Qm9VbIQ&sensor=true"></script>
    @*<script type="text/javascript" src="http://maps.google.com/maps/api/js?key=AIzaSyCuzGQQHQEajGCANlCPhwU8YdG9Qm9VbIQ&sensor=false&v=3&libraries=geometry"></script>*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/Regras/Localizacao.js")
}



