@model FindBus.Models.VersaoApp
@{
    ViewBag.Title = "Versão Aplicativo";
    ViewBag.Pagina = "Versão Aplicatvo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("AdicionarVersaoApp", "VersaoBase", FormMethod.Post, new { @id = "formVersaoApp" }))
{
    <div class="control-group">
        <div class="controls">
            <label for="@Html.LabelFor(model => model.versaoApp)" class="col-lg-2 control-label">@Html.LabelFor(model => model.versaoApp)</label>
            <input type="number" class="form-control" id="versao" placeholder="Versão App" required="required">
        </div>
    </div>
    <div class="control-group">
        <label for="@Html.LabelFor(model => model.Localapp)" class="col-lg-2 control-label">@Html.LabelFor(model => model.Localapp)</label>
    </div>
    <br />
    <div style="float: left; width: 100%; position: relative">
        <input type="file" title="Selecione a Versao do Aplicativo" id="arquivo" required="required" />
    </div>
    <br />
    <br />
    <input type="button" class="btn btn-success" value="Salvar" id="btnSalvarVersaoApp" />
    <a href="@Url.Action("Index", "VersaoApp")" class="btn btn-info">Voltar</a>
}



@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/Regras/VersaoApp.js")
}
