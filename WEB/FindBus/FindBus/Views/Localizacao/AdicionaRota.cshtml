@model FindBus.Models.Localizacao
@{
    ViewBag.Title = "Rota - Cadastro";
    ViewBag.Pagina = "Cadastro de Rota";
    Layout = "~/Views/Shared/_BootstrapLayout.basic.cshtml";
}
@Html.ValidationSummary(true)
<div class="row-fluid">
    <div class="row-fluid">
        <div class="col-lg-12">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Nome da Rota" id="NomeRota" maxlength="50">
                <span class="input-group-btn">
                    <button class="btn btn-large btn-info" type="button" id="btnSalvarRota">Salvar</button>
                </span>
            </div>
        </div>
    </div>
    <div class="row-fluid" style="text-align:center">        
        <ul class="pagination pull-center" id="PaginacaoPontos">            
        </ul>
    </div>
    <div class="row-fluid">
        <div class="col-md-5 col-md-offset-0">
            <div id="map" style="width: 730px; height: 500px">
            </div>
        </div>
        <div class="col-md-4 col-md-offset-3">
            <input type="radio"
                name="radSize"
                id="sizeSmall"
                value="small"
                checked="checked" onclick="DefineTipoImagemPonto()" />
            <label for="sizeSmall" style="margin-right:20px"><img src="~/Content/images/bus (1).png" style="margin-right:5px"/>Ponto de Onibus</label>               
            <input type="radio"
                name="radSize"
                id="sizeMed"
                value="medium" onclick="DefineTipoImagemPassagem()" />
            <label for="sizeMed"> <img src="http://labs.google.com/ridefinder/images/mm_20_green.png" style="margin-right:5px"/>Ponto Passagem</label>
            <div id="Localizacoes" style="overflow: auto; height: 500px">
                <b>Localizações</b>
                <div id="ListPosicoes" class="pontoPassagem">                    
                </div>
                <div class="row-fluid">
                    <div class="span6 pull-right">
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyCuzGQQHQEajGCANlCPhwU8YdG9Qm9VbIQ&sensor=true"></script>        
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/Regras/Localizacao.js")

}



